<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    android:background="@drawable/background_curves"
    app:cardCornerRadius="@dimen/margin_3">

    <RelativeLayout
        android:id="@+id/grid_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_overlay">

        <LinearLayout
            android:id="@+id/grid_item_image_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/grid_item_image"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin_100"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <TextView
            android:id="@+id/grid_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_item_image_layout"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_3"
            android:text="I am the Name of the Article"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grid_item_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_item_name"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="80"
            android:maxLines="2"
            android:padding="@dimen/margin_3"
            android:text="I am the Description"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/grid_item_description"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_3">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/greyrupee" />


                <TextView
                    android:id="@+id/grid_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60000"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin_3"
                    android:text="/-"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_3">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/greyrupee" />

                <TextView
                    android:id="@+id/grid_item_price_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800/-"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/grid_item_discount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="end"
                android:paddingLeft="@dimen/margin_3"
                android:text=" 60%"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
