<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/white_overlay">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_curves"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/pattern_dark"
                    android:cropToPadding="true"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/livingroom" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/pattern_dark"
                    android:cropToPadding="true"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/livingroom" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/pattern_dark"
                    android:cropToPadding="true"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/livingroom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/main_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:background="@color/pattern_dark"
                    android:cropToPadding="true"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/livingroom" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/main_share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/ic_share" />

            <ImageButton
                android:id="@+id/read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@mipmap/ic_more" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>